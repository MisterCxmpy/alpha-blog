<h1 class="text-center mt-4">Log in</h1>

<div class="container">
  <div class="justify-content-center">
    <%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-3 bg-info rounded",local: true) do |f| %>      
      <div class="form-group">
        <%= f.label :email, class: "col-2 col-form-label text-light" %>
        <%= f.email_field :email, class: "form-control shadow-rounded", placeholder: "Enter email" %>
      </div>
      <div class="form-group">
        <%= f.label :password, class: "col-2 col-form-label text-light" %>
        <%= f.password_field :password, class: "form-control shadow-rounded", placeholder: "Password" %>
      </div>
      <div class="form-group row justify-content-center">
        <%= f.submit "Log in", class: "btn btn-outline-light btn-lg" %>
      </div>
    <% end %>
    <div class="mb-3">
      <%= link_to "[ Cancel and return to articles listing ]", articles_path, class: "row justify-content-center text-info" %>
    </div>
  </div>
</div>